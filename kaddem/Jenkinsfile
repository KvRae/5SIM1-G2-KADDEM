pipeline {
        agent any
    stages {
        stage("Git") {
            steps {
                git branch: 'FediAbdennabi-5SIM1-G2', url: 'https://github.com/KvRae/5SIM1-G2-KADDEM.git'
                sh 'git pull origin FediAbdennabi-5SIM1-G2'
            }
        }

        stage("Maven") {
            steps {
                dir('kaddem') {
                    sh 'mvn clean '
                }
            }
        }

        stage("JUnit") {
            steps {
               dir('kaddem'){
                    withMaven(maven: 'mvn') {
                        sh "mvn test"
                    }
               }
            }
        }

        stage('SonarQube') {
            steps {
               dir('kaddem'){
                    withMaven(maven: 'mvn') {
                         withSonarQubeEnv('sonarQubeServer') {
                              sh 'mvn sonar:sonar'
                         }
                     }
               }
            }
        }

        }

    }
}