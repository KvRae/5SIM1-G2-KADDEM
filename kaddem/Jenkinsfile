pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
                sh 'git checkout FediAbdennabi-5SIM1-G2'
                sh 'git pull origin FediAbdennabi-5SIM1-G2'
            }
        }

        stage("Maven Clean") {
             steps {
                 dir('kaddem') {
                     sh 'mvn clean'
                 }
             }
        }

        stage("Maven Compile") {
             steps {
                 dir('kaddem') {
                     sh 'mvn compile'
                 }
             }
        }

        stage("SonarQube analysis") {
            steps {
                dir('kaddem') {
                    withSonarQubeEnv('sonarserver') {
                        sh "mvn sonar:sonar"
                    }

                }
            }
        }


         stage('Nexus') {
             steps {
                 dir('kaddem') {
                     sh "mvn deploy -DskipTests"
                 }
             }
         }



    }
}