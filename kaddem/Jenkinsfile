pipeline {
    agent any

    stages {
        stage("Git") {
            steps {
                git branch: 'FediAbdennabi-5SIM1-G2', url: 'https://github.com/KvRae/5SIM1-G2-KADDEM.git'
            }
        }

        stage("Maven") {
            steps {
                dir('kaddem') {
                    sh 'mvn clean '
                }
            }
        }

        stage("JUnit") {
            steps {
               dir('kaddem') {
                   sh "mvn test"
               }
            }
        }

        stage('SonarQube') {
            steps {
               dir('kaddem') {
                   withSonarQubeEnv('sonarqube') {
                       sh 'mvn sonar:sonar'
                   }
               }
            }
        }
    }
}
