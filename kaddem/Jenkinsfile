pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
                sh 'git checkout FediAbdennabi-5SIM1-G2'
                sh 'git pull origin FediAbdennabi-5SIM1-G2'
            }
        }

        stage("Clean and Build") {
             steps {
                 dir('kaddem') {
                     sh 'mvn clean'
                     sh 'mvn test'
                 }
             }
        }


        stage("SonarQube analysis") {
              steps {
                  dir('kaddem') {
                      withSonarQubeEnv('sonarQubeServer') {
                         sh "mvn sonar:sonar"
                      }
                  }
              }
        }
    }
}
