pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven' // Use the Maven tool configured in Jenkins
        NEXUS_REPO = 'your-nexus-repository-url' // Replace with your Nexus repository URL
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'FediAbdennabi-5SIM1-G2', url: 'https://github.com/KvRae/5SIM1-G2-KADDEM.git'
                sh 'git pull origin FediAbdennabi-5SIM1-G2'
            }
        }

        stage('MAVEN-CLEAN') {
            steps {
                dir('kaddem') {
                    sh "${MAVEN_HOME}/bin/mvn clean"
                }
            }
        }

        stage('MAVEN-DEPLOY') {
            steps {
                dir('kaddem') {
                    sh "${MAVEN_HOME}/bin/mvn deploy -Dmaven.test.skip=true -DaltDeploymentRepository=nexus::default::${NEXUS_REPO}"
                }
            }
        }

        stage('SONARQUBE') {
            steps {
                dir('kaddem') {
                    sh "${MAVEN_HOME}/bin/mvn sonar:sonar"
                }
            }
        }
    }
}
