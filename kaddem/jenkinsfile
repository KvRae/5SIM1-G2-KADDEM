pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('yassine-dockerhub') // Add your Docker Hub credentials ID
        DOCKER_IMAGE_NAME = 'yassinearidhi/yassine_aridhi_5sim1_g2_kaddem'
        DOCKER_IMAGE_TAG = '1.00' // Change to your desired tag
    }

    stages {
        stage('Checkout GIT') {
            steps {
                echo 'Pulling...'
                git branch: 'yassineAridhi_5sim1_G2', url: 'https://github.com/KvRae/5SIM1-G2-KADDEM.git'
            }
        }

        stage('Build avec Maven') {
            steps {
                // Change the working directory to the 'kaddem' subdirectory
                dir('kaddem') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('MVN SONARQUBE') {
            steps {
                dir('kaddem') {
                    withSonarQubeEnv('sonarqube') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir('kaddem') {
                    sh 'mvn test'
                }
            }
        }

        stage('MVN Nexus') {
            steps {
                dir('kaddem') {
                    sh "mvn deploy -DskipTests"
                }
            }
        }

        stage('Docker Build'){
            steps{
                dir('kaddem'){
                    sh "docker build -t yassinearidhi/yassine_aridhi_5sim1_g2_kaddem:1.00 ."
                }
            }
        }

        stage('Login'){
            steps{
                sh "echo $DOCKER_HUB_CREDENTIALS_PSW | docker login -u Â£DOCKER_HUB_CREDENTIALS_USR --password-stdin"
            }
        }

        stage('PUSH'){
            steps{
                dir('kaddem'){
                    sh "docker push yassinearidhi/yassine_aridhi_5sim1_g2_kaddem:1.00"
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
